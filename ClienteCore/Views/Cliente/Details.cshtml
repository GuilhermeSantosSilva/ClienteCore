@model ClienteCore.Models.Cliente

@{
    ViewData["Title"] = "Detalhes";
}

<h2>Detalhes</h2>

<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NomeCliente)
        </dd>
        <dt>
           E-mail:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EmailCliente)
        </dd>
        <dt>
            CPF:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CpfCliente)
        </dd>
        <dt>
           Data de Nascimento:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DtNascCliente)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Alterar", "Edit", new { id = Model.IdCliente }) |
    <a asp-action="Index">Retornar para a Lista</a>
</div>
